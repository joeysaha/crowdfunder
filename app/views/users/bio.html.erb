<h1>User Profile</h1>
<hr>

<p>
  User:
  <%= "#{@user.first_name} #{@user.last_name}" %>
</p>
<p>
  Email:
  <%= @user.email %>
<hr>
<br>


<h3>Projects</h3>
<hr>
<h4>Uploaded Projects</h4>
<% @user.projects.each do |project| %>
  <%= project.title %> <br>
<% end %>

<h4>Active</h4>
<% active_projects = [] %>
<% @user.projects.each do |project| %>
  <% if project.start_date < DateTime.now %>
    <% active_projects << project.title %>
  <% end %>
<% end %>
<% active_projects.each do |projects| %>
  <% if active_projects.length > 0 %>
    <p><%= projects %></p>
    <% else %>
    <p><%= "#{@user.first_name}"%> has no currently active projects.</p>
    <% end %>
  <%end %>
<hr>

